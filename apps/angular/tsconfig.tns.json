{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "es2015",
        "moduleResolution": "node",
        "baseUrl": "./src/",
        "paths": {
            "*": [
                "../node_modules/tns-core-modules/*",
                "../node_modules/*"
            ],
            "@agora": [
                "app/*"
            ],
            "@views/*": [
                "app/views/*"
            ],
            "@components/*": [
                "app/components/*"
            ],
            "@common/*": [
                "app/common/*"
            ],
            "@shared/*": [
                "app/shared/*"
            ]
        }
    },
    "exclude": [
        "**/*.tns.ts",
        "**/*.android.ts",
        "**/*.ios.ts",
        "app/main.aot.ts"
    ]
}
